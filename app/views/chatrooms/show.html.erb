<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<% @chatroom.recent_messages(100).each do |message|%>
  <p><strong><%= message.user.username %>: </strong><%= message.body %></p>
<%end%>

<%= form_for [@chatroom,Message.new] do |f| %>
  <%= f.text_area :body,class:"form-control",rows:1, autofocus: true %>
<% end %>


